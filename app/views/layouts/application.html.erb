<!DOCTYPE html>
<html>
<head>
  <title>Cms</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="initial-scale=1, maximum-scale=1, minimal-ui">
  <meta name="mobile-web-app-capable" content="yes">
  <script>
    $(function(){
      window.app = new App;
    });
  </script>
</head>
<body class="<%= params[:controller].gsub(/[^a-z\-]+/,'-') %>-controller <%= params[:action] %>-action">

  <div class="page-wrapper">
    <header>

      <h1>
        <b>Tuesday</b><span> - Website builder for Mobile</span>
      </h1>

      <div class="auth">
        <% if current_user %>
          <span class="name">Logged in as <%= current_user.email.gsub(/@.+/,'@..') %> | </span>
          <%= link_to "Profile", edit_user_registration_path %> |
          <%= link_to "Sign out", destroy_user_session_path, :method => 'delete' %>
        <% else %>
          <%= link_to "Sign in", new_user_session_path %> |
          <%= link_to "Register", new_user_registration_path %>
        <% end %>
      </div>

    </header>

    <% if notice.present? %><p class="notice"><%= notice %></p><% end %>
    <% if alert.present? %><p class="alert"><%= alert %></p><% end %>

    <script>
      setTimeout(function(){
        $("p.notice, p.alert").fadeOut();
      }, 1000);
    </script>

    <%= yield %>
  </div>

</body>
</html>
