<!DOCTYPE html>
<html>
<head>
  <title>{{ page.title }} - {{ site.name }}</title>
  <style>
    @import url(stylesheet.css);
  </style>
  <script src="/zepto.js"></script>
  <meta name="viewport" content="initial-scale=1, maximum-scale=1, minimal-ui">
  <meta name="mobile-web-app-capable" content="yes">
</head>
<body class="echo-template">
  <div class="container">
    <header>
      <h1>{{ site.name }}</h1>
    </header>

    <ul class="navigation">
      <li class="toggle">
        Navigation...
        <button>&darr;</button>
      </li>

      {% for page in pages %}
        <li {% if page.path == path %} class="current" {% endif %} >
          <a href="{{ page.path }}">{{ page.title }}</a>
        </li>
      {% endfor %}
    </ul>
    
    <div class="content">
      {{ page.content }}
    </div>
  </div>
</body>
</html>
